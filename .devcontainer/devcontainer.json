{
  "name": "Robot Project Dev",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "python-reader",            // Use python-reader as the main service
  "workspaceFolder": "/app",             // Set to the mount point in the container
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      }
    }
  },
  "runServices": ["python-reader", "cpp-reader", "cross-compile"]
}
